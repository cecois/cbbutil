{{#each rows}}
<li style="font-size:2.2em;" class="bit" data-id="{{_id}}">
	{{#equal bit 'Location'}}<i data-id="{{location_type}}:{{location_id}}" style="font-size:2.3em;" class="fa fa-map-marker"/>{{/equal}}
<div data-id="{{meta._id}}" style="margin-bottom:5%;" class="bit-instance">{{instance}}</div>
<div class="columns">
	<ul style="font-size:.6em;padding-left:5%;" class='column bit-data-solo'>
		<li class='tooltip is-tooltip-left' data-tooltip="{{elucidation}}"><span class="has-text-grey-light">bit:</span> <a href="#" class="cbb-trigger" data-type="bit" data-target="{{bit}}">{{bit}}</a></li>
		<li><span class="has-text-grey-light">episode:</span> <a class="tooltip is-tooltip-right cbb-trigger" data-tooltip="ep.{{episode}}" data-type="episode" data-target="{{episode}}" href="#">{{meta.episode_string}}</a></li>
		 <li><span class="has-text-grey-light">starts at (roughly):</span> {{tstart}}</li>


<li><span class="has-text-grey-light">added:</span> {{meta.created}}</li>
{{#if meta.updated}}<li><span class="has-text-grey-light">updated:</span> {{meta.updated}}</li>{{/if}}
{{#if meta.tags}}<li><span class="has-text-grey-light">tagged:</span> {{#each meta.tags}}<a href="#" class="cbb-trigger" data-type="tags" data-target="{{this}}">{{this}}</a>{{#unless @last}}, {{/unless}}{{/each}}</li> {{/if}}



	</ul><!-- /.bit-data -->



</div>
</li>
{{/each}}
